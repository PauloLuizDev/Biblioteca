@model List<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuarios";
}
<h2>Listagem de Usuarios</h2>
<div class="row">
    <div class="col-md-12">
        @if(Model.Count != 0){
        <table class="table table-striped"> 
            <thead>
                <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Login</th>
                <th>Tipo</th>
                <th></th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                
                @foreach(Usuario e in Model)
                {
                    
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Nome</td>
                    <td>@e.Login</td>
                    <td>@if(e.Tipo ==0){<span class="text-danger">Administrador</span>}else{<span>Padrão</span>}</td>
                    <td><a href="/Usuario/EditarUsuario/@e.Id">Editar</a></td>
                    <td><a href="/Usuario/ExcluirUsuario/@e.Id">X</a></td>
                </tr>
                }
            </tbody>
        </table>
        }
        else{<p>Sua busca não retornou resultado</p>}
    </div>
</div>

