@model Usuario
@{
    ViewData["Title"] = "Edição de Usuario";
}

<h1 class="row justify-content-md-center">Edição de Empréstimo</h1>
<div class="row justify-content-md-center">
    <form asp-action="EditarUsuario" method="POST" class="col-md-4">
        <input type="hidden" asp-for="@Model.Id" />

            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="@Model.Nome">Nome</label>
                <input asp-for="@Model.Nome" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Login">Login</label>
                <input asp-for="@Model.Login" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Senha">Senha</label>
                <input type="password" asp-for="@Model.Senha" class="form-control" required/>
            </div>
            <div class="form-group">
                <label name="Tipo">Tipo </label>
                <select asp-for="@Model.Tipo" required>
                    <option value="@Usuario.ADMIN">Administrador</option>
                    <option value="@Usuario.PADRAO">Padrão</option>
                </select>
            </div>
            
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>